{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["DOM", "ES2015"]
  },
  "include": ["src"]
}
